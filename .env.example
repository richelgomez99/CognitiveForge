# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# System Configuration
MAX_ITERATIONS=3

# Per-Agent Model Configuration (Tier 1 - FR-T1-014/015)
# Updated to use Gemini 2.x models (1.5 variants deprecated)
GEMINI_MODEL_ANALYST=gemini-2.5-pro
GEMINI_MODEL_SKEPTIC=gemini-2.5-flash
GEMINI_MODEL_SYNTHESIZER=gemini-2.5-pro

# Global Model Fallback
GEMINI_MODEL=gemini-2.5-pro

# FastAPI Authentication (Tier 2 - FR-T2-012)
# This is YOUR custom key - create any secure string you want
# Example: API_KEY=cogforge_dev_secret_2024
API_KEY=your_api_key_here

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Semantic Scholar API (Optional, for Knowledge Discovery Engine)
# Free signup: https://www.semanticscholar.org/product/api
# Free tier: 5000 requests/5 minutes (vs 100 without key)
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# Tier 1: Intelligent Discovery Configuration
# Similarity threshold for auto-rejection of repeated claims (0.0-1.0)
SIMILARITY_THRESHOLD=0.80

# Maximum items to keep in debate memory (FIFO eviction when exceeded)
MAX_MEMORY_ITEMS=10

# Enable debug logging for memory and similarity operations
DEBUG_MEMORY=false

# Tier 2: Visualization & UX Configuration
# Enable citation count caching in Neo4j (reduces Semantic Scholar API calls)
ENABLE_CITATION_CACHING=true

# Maximum papers to display in evidence evolution graph
MAX_PAPERS_IN_GRAPH=50

# SSE event streaming buffer size (number of events to batch)
SSE_BUFFER_SIZE=10

# Progress update frequency for real-time UI (milliseconds)
PROGRESS_UPDATE_INTERVAL_MS=100

# =============================================================================
# Epic 4: Persistent Memory System Configuration
# =============================================================================

# Enable persistent memory features
ENABLE_PERSISTENT_MEMORY=true

# Session lifecycle management
MEMORY_RETENTION_DAYS=90                # Archive sessions older than this
MEMORY_ARCHIVE_STORAGE=neo4j             # Storage backend: neo4j | postgresql
MAX_SESSIONS_PER_WORKSPACE=1000          # Maximum sessions per workspace
MAX_SESSIONS_CACHED=10                   # Number of active sessions to cache

# Memory compression and pattern recognition
MEMORY_COMPRESSION_THRESHOLD=50          # Compress sessions after N rounds
PATTERN_SIMILARITY_THRESHOLD=0.85        # Similarity threshold for pattern matching
ENABLE_MEMORY_AUGMENTATION=true          # Enable cross-session learning
ENABLE_USER_ISOLATION=true               # Enable multi-user workspace isolation

# Semantic search configuration
ENABLE_SEMANTIC_SEARCH=true              # Enable vector-based moment search
EMBEDDING_MODEL=all-MiniLM-L6-v2        # Model for generating embeddings
SEARCH_SIMILARITY_THRESHOLD=0.75         # Minimum similarity for search results

# Cache configuration (optional - for future Redis integration)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL_SECONDS=3600

# Archival configuration (optional - for future PostgreSQL integration)
# POSTGRESQL_CONNECTION=postgresql://user:pass@localhost:5432/cognitiveforge
# ARCHIVE_BATCH_SIZE=1000
